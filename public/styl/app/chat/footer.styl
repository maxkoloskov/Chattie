.c-msg-input-container
  position: absolute
  left: 20px
  right: 20px
  bottom: 22px
  height: 40px
  font-size: 1rem

.c-msg-input
  overflow-y: hidden
  height: 100%
  width: 100%
  background: #colorBg
  font-size: .95rem
  line-height: 1.2rem
  border: 2px solid $colorBorder
  margin: 0
  color: #3d3c40
  -webkit-appearance: none
  outline: 0
  position: absolute
  bottom: 0
  padding: 9px 9px 9px 9px
  max-height: 460px
  resize: none
  border-radius: .2rem .2rem .2rem .2rem
  &:focus
    border: 2px solid #50638F

.c-notification-bar
  position: absolute
  bottom: 5px
  left: 20px
  width: 85%
  .c-notification-text
    color: #9e9ea6
    display: inline-block
    font-size: .7em
    line-height: .8rem
    max-width: 75%
    padding-left: 10px
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;