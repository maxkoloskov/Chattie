.c-channel-header
  position: relative
  height: 100%
  width: 100%
  margin: 8px 0 0
  .c-channel-title
    font-weight: 600
    overflow: hidden
    text-overflow: ellipsis
    display: block
    width: 100%
    color: #444
    line-height: 1.2rem
    font-size: 1.2rem
    margin-left: 20px
  .c-channel-topic
    color: #9e9ea6
    overflow: hidden
    text-overflow: ellipsis
    display: block
    font-size: .9em
    line-height: 1.6rem
    margin-left: 21px
    max-width: 80%
    white-space: nowrap
