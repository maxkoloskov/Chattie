#!/usr/bin/env node

var http = require('http');
var app = require('../app');
var config = require('../app/config');

/* Start server */
var port = config.server.port;
var host = config.server.host;
var bind = host + ':' + port;
http.createServer(app).listen(port, host, function() {
    console.log('Server listening on ' + bind);
});
